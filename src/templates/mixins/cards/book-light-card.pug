mixin book-light-card(href, src, title, author)
    a.card.border-0.bg-transparent(href=href)
        .ratio-3x4.p-3.p-lg-5.card-img.d-flex.align-items-center.justify-content-center.bg-white(style="height: 350px;")
            img.card-img(src=src, alt="")
        .card-body.text-center.px-0
            h4.card-title= title
            p.card-text.text-secondary.text-uppercase.small= author