mixin houses-navigation(links, leave)
    .row.g-2.mb-2.mb-sm-4.mb-lg-6
        each link in links
            .col.col-6.col-lg-auto 
                a.btn.btn-outline-primary.w-100(href=link.href, class=(link.active ? "active": ""))= link.text
        if leave
            .col.col-12.col-lg-auto.ms-lg-auto
                a.btn.btn-primary.w-100(href=leave.href) 
                    svg.icon.me-1(width="16", height="16", viewBox="0 0 16 16", fill="none", xmlns="http://www.w3.org/2000/svg")
                        path(d="M8 14C11.3137 14 14 11.3137 14 8C14 4.68629 11.3137 2 8 2C4.68629 2 2 4.68629 2 8C2 11.3137 4.68629 14 8 14Z", stroke="white", stroke-width="1.5", stroke-miterlimit="10", stroke-linecap="round", stroke-linejoin="round")
                        path(d="M3.83331 3.83337L12.1666 12.1667", stroke="white", stroke-width="1.5", stroke-linecap="round", stroke-linejoin="round")
                    =leave.text